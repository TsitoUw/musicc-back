generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id         String     @id @default(uuid())
  artistname String
  username   String     @unique
  name       String?
  email      String     @unique
  password   String
  photo      String?
  createdAt  DateTime   @default(now())
  updatedAt  DateTime?  @updatedAt
  songs      Songs[]
  comments   Comments[]

  @@index([name, artistname, username, email])
}

model Songs {
  id         String     @id @default(uuid())
  title      String
  desciption String?
  photo      String?
  song       String
  artist     Users      @relation(fields: [usersId], references: [id])
  usersId    String
  comments   Comments[]

  @@index([title])
}

model Comments {
  id      String @id @default(uuid())
  content String
  author  Users  @relation(fields: [usersId], references: [id])
  usersId String
  song    Songs  @relation(fields: [songId], references: [id])
  songId  String
}

model RefreshTokens {
  token String @id @unique

  @@index([token])
}
